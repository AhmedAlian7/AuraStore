@using E_Commerce.Business.ViewModels.PromoCode
@model IEnumerable<PromoCodeViewModel>
@{
    ViewData["Title"] = "Promo Codes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Promo Codes</h2>
    <a asp-action="Add" asp-controller="PromoCode" asp-area="Admin" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Promo Code
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No promo codes available.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Discount Type</th>
                    <th>Discount Value</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Usage Limit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var promo in Model)
                {
                    <tr>
                        <td>@promo.Code</td>
                        <td>@promo.Description</td>
                        <td>@(promo.DiscountType == DiscountType.Percentage ? "Percentage" : "Fixed Amount")</td>
                        <td>
                            @if (promo.DiscountType == DiscountType.Percentage)
                            {
                                @($"{promo.DiscountValue}%")
                            }
                            else
                            {
                                @($"{promo.DiscountValue:C}")
                            }
                        </td>
                        <td>@promo.StartDate?.ToString("yyyy-MM-dd")</td>
                        <td>@promo.EndDate?.ToString("yyyy-MM-dd")</td>
                        <td>@(promo.UsageLimit.HasValue? promo.UsageLimit.Value.ToString() : "Unlimited")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
