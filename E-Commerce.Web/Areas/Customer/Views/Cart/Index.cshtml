@model CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Shopping Cart</h2>
        </div>
    </div>

    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="row">
            <div class="col-12 text-center py-5">
                <div class="empty-cart">
                    <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Your cart is empty</h4>
                    <p class="text-muted mb-4">Add some items to get started</p>
                    <a href="/" class="btn btn-primary">Continue Shopping</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Left Column - Cart Items -->
            <div class="col-lg-8 col-md-7">
                <div class="cart-items-container">
                    @foreach (var item in Model.Items)
                    {
                        <div class="card p-3 mb-3 cart-item" data-cart-item-id="@item.CartItemId" data-product-id="@item.ProductId">
                            <div class="row align-items-center">
                                <!-- Product Image -->
                                <div class="col-md-3 col-4">
                                    <img src="@item.ImageUrl" alt="@item.ProductName" class="img-fluid rounded product-image" style="max-height: 120px; object-fit: cover;">
                                </div>

                                <!-- Product Details -->
                                <div class="col-md-4 col-8">
                                    <h6 class="product-name mb-2">@item.ProductName</h6>
                                    <div class="unit-price mt-2 fw-bold">
                                        $@item.UnitPrice.ToString("F2")
                                    </div>
                                </div>

                                <!-- Quantity Controls -->
                                <div class="col-md-3 col-6 mt-3 mt-md-0">
                                    <label class="form-label small">Quantity</label>
                                    <div class="quantity-controls d-flex align-items-center">
                                        <button class="btn btn-outline-secondary btn-sm qty-decrease" type="button">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="number"
                                               class="form-control text-center qty-input mx-2"
                                               style="width: 60px;"
                                               value="@item.Quantity"
                                               min="1"
                                               max="99"
                                               data-cart-item-id="@item.CartItemId">
                                        <button class="btn btn-outline-secondary btn-sm qty-increase" type="button">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- Subtotal and Remove -->
                                <div class="col-md-2 col-6 mt-3 mt-md-0 text-end">
                                    <div class="item-subtotal fw-bold mb-2">
                                        $<span class="subtotal-amount">@item.Subtotal.ToString("F2")</span>
                                    </div>
                                    <button class="btn btn-danger btn-sm remove-item"
                                            data-cart-item-id="@item.CartItemId"
                                            title="Remove item">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Continue Shopping Link -->
                <div class="mt-4">
                    <a href="/" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Right Column - Order Summary -->
            <div class="col-lg-4 col-md-5 mt-4 mt-md-0">
                <div class="card p-4 order-summary sticky-top" style="top: 20px;">
                    <h5 class="card-title mb-4">Order Summary</h5>

                    <!-- Order Details -->
                    <div class="order-details">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items (<span id="total-items">@Model.TotalItems</span>)</span>
                            <span class="fw-bold">$<span id="subtotal-amount">@Model.TotalAmount.ToString("F2")</span></span>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            <span class="text-success">FREE</span>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax</span>
                            <span>$<span id="tax-amount">@Model.TaxAmount.ToString("F2")</span></span>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between mb-4">
                            <h6 class="mb-0">Estimated Total</h6>
                            <h6 class="mb-0 text-primary">$<span id="estimated-total">@Model.TotalAmount.ToString("F2")</span></h6>
                        </div>
                    </div>

                    <!-- Promo Code -->
                    <div class="promo-code-section mb-4">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Promo code" id="promo-code-input">
                            <button class="btn btn-outline-secondary" type="button" id="apply-promo">Apply</button>
                        </div>
                        <small class="text-muted">Enter your promo code to save more</small>
                    </div>

                    <!-- Checkout Button -->
                    <div class="checkout-section">
                        <button class="btn btn-warning w-100 py-3 fw-bold checkout-btn" onclick="location.href='/Checkout/Index'">
                            <i class="fas fa-lock me-2"></i>Proceed to Checkout
                        </button>
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>Secure checkout
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Loading Overlay -->
<div id="loading-overlay" class="d-none">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/js/cart-items.js" asp-append-version = "true"></script>
    <link rel="stylesheet"href="~/css/cart-items.css" />

    <script>
        $('#estimated-total').text(Number(@Model.TotalAmount).toFixed(2));
    </script>

}