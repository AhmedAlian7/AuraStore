@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <div class="row justify-content-center align-items-center min-vh-80" style="min-height: 70vh;">
        <!-- Left side - Payment Method -->
        <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center mb-4">
            <div class="card shadow-sm border-0 rounded-3 w-100" style="max-width: 450px;">
                <div class="card-body p-4 d-flex flex-column justify-content-center align-items-center">
                    <h4 class="mb-4 fw-bold text-center">Select Payment Method</h4>

                    <!-- Payment Options -->
                    <div class="payment-options w-100">
                        <!-- Payment Upon Receipt -->
                        <div class="payment-button" data-payment="receipt" onclick="selectPayment('receipt', this)">
                            <div class="payment-icon">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                            <div class="payment-text">
                                <h5>Payment Upon Receipt</h5>
                                <p class="text-muted mb-0">Pay with cash when your order arrives</p>
                            </div>
                            <div class="payment-check">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>

                        <!-- Credit Card -->
                        <div class="payment-button" data-payment="creditcard" onclick="selectPayment('creditcard', this)">
                            <div class="payment-icon">
                                <i class="fas fa-credit-card"></i>
                            </div>
                            <div class="payment-text">
                                <h5>Pay with Credit Card</h5>
                                <p class="text-muted mb-0">Secure online payment with Visa/MasterCard</p>
                            </div>
                            <div class="payment-check">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right side - Order Summary -->
        <div class="col-lg-4 d-flex flex-column justify-content-between" style="min-height: 350px;">
            <div class="card shadow-sm border-0 rounded-3 flex-grow-1 d-flex flex-column justify-content-between h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-between h-100">
                    <!-- Checkout Form -->
                    <div class="checkout-section d-flex flex-column justify-content-between h-100">
                        <form asp-area="Customer" asp-controller="Checkout" asp-action="PaymentMethod" method="post" class="mt-auto">
                            <input type="hidden" name="option" id="selectedOption" />
                            <button type="submit" class="btn btn-warning w-100 py-3 fw-bold checkout-btn mt-auto" id="proceedBtn" disabled>
                                <i class="fas fa-lock me-2"></i>Proceed to Checkout
                            </button>
                        </form>
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>Secure checkout
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedMethod = "";

        function selectPayment(method, element) {
            selectedMethod = method;

            // remove active from all
            document.querySelectorAll('.payment-button').forEach(el => el.classList.remove('active'));
            // set active
            element.classList.add('active');

            // enable proceed
            document.getElementById("proceedBtn").disabled = false;

            // set hidden input
            document.getElementById("selectedOption").value = method === "creditcard" ? "CreditCard" : "Receipt";
        }
    </script>

    <style>
        .min-vh-80 {
            min-height: 80vh;
        }
        /* smaller + lower icons */
        .cart-item i,
        .checkout-btn i,
        .payment-icon i {
            font-size: 1rem;
            vertical-align: middle;
            margin-top: 2px;
        }

        .fa-shopping-cart {
            font-size: 1.5rem !important;
            margin-top: 6px;
        }

        .payment-button {
            display: flex;
            align-items: center;
            border: 2px solid #ddd;
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 15px;
            cursor: pointer;
            transition: 0.2s;
            background: #fff;
        }

            .payment-button.active {
                border-color: #ff9800;
                background-color: #fff8e1;
            }

        .payment-icon {
            font-size: 1.5rem;
            margin-right: 15px;
        }

        .payment-check {
            margin-left: auto;
            display: none;
            color: #ff9800;
        }

        .payment-button.active .payment-check {
            display: block;
        }

        /* Ensure button stays at the bottom */
        .checkout-section {
            min-height: 200px;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            height: 100%;
        }
        .checkout-btn {
            margin-top: auto;
        }
    </style>
}
