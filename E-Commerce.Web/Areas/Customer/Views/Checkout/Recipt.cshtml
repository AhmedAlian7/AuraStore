@model CartSummaryDto

@{
    ViewData["Title"] = "Payment Upon Receipt";
    decimal deliveryTax = ViewBag.DeliveryTax != null ? (decimal)ViewBag.DeliveryTax : 12.00m;
    decimal discount = ViewBag.DiscountAmount != null ? (decimal)ViewBag.DiscountAmount : (Model?.DiscountAmount ?? 0);
    decimal subtotal = Model?.Subtotal ?? 0;
    decimal tax = Model?.Tax ?? 0;
    decimal total = subtotal - discount + tax + deliveryTax;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <!-- Page Header -->
            <div class="text-center mb-4">
                <h2 class="mb-2">
                    <i class="fas fa-money-bill-wave text-success me-2"></i>
                    Payment Upon Receipt
                </h2>
                <p class="text-muted">Complete your shipping information to place your order</p>
            </div>

            <!-- Order Summary Card -->
            @if (Model != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-receipt me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">
                                        <i class="fas fa-shopping-basket me-1"></i>Total Items
                                    </span>
                                    <span class="fw-bold">@(Model?.TotalItems ?? 0)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Subtotal</span>
                                    <span class="fw-bold">$@(subtotal.ToString("F2"))</span>
                                </div>
                            </div>
                            @if (discount > 0)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex justify-content-between align-items-center py-2">
                                        <span class="text-muted text-success">Discount</span>
                                        <span class="fw-bold text-success">- $@(discount.ToString("F2"))</span>
                                    </div>
                                </div>
                            }
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Tax</span>
                                    <span class="fw-bold">$@(tax.ToString("F2"))</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Pay on Delivery Fee</span>
                                    <span class="fw-bold">$@(deliveryTax.ToString("F2"))</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Shipping</span>
                                    <span class="fw-bold text-success">FREE</span>
                                </div>
                            </div>
                        </div>
                        <hr class="my-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Total Amount</h5>
                            <h4 class="mb-0 text-primary">$@(total.ToString("F2"))</h4>
                        </div>
                        <div class="mt-2">
                            <small class="text-success">
                                <i class="fas fa-truck me-1"></i>
                                You'll pay this amount when your order is delivered
                            </small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Loading cart information...
                </div>
            }

            <!-- Shipping Information Form -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-shipping-fast me-2"></i>Shipping Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Recipt" asp-controller="Checkout" method="post" id="shippingForm">
                        <!-- Hidden fields to preserve cart data -->
                        @if (Model != null)
                        {
                            <input type="hidden" asp-for="TotalItems" />
                            <input type="hidden" asp-for="Subtotal" />
                            <input type="hidden" asp-for="Tax" />
                            <input type="hidden" name="DeliveryTax" value="@deliveryTax" />
                            <input type="hidden" name="Total" value="@total" />
                        }

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <a href="/Customer/Checkout/Index" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Payment Options
                                </a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-lg w-100" id="confirmOrderBtn">
                                    <i class="fas fa-check-circle me-2"></i>Confirm Order
                                </button>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Your information is secure and will only be used for delivery purposes
                            </small>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Payment Method Notice -->
            <div class="alert alert-info mt-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-info-circle fa-2x me-3"></i>
                    <div>
                        <h6 class="alert-heading mb-1">Cash on Delivery Selected</h6>
                        <p class="mb-0">
                            You can pay with cash when your order arrives. Our delivery person will have change
                            for bills up to $100.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="loading-overlay" class="d-none position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" style="background: rgba(0,0,0,0.7); z-index: 9999;">
    <div class="text-center text-white">
        <div class="spinner-border text-light mb-3" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
        <h5>Processing your order...</h5>
        <p class="mb-0">Please wait while we confirm your details</p>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Smooth scroll to validation errors
            $('form').on('invalid-form.validate', function() {
                let firstError = $(this).find('.input-validation-error').first();
                if (firstError.length) {
                    $('html, body').animate({
                        scrollTop: firstError.offset().top - 100
                    }, 500);
                }
            });
        });
    </script>

    <style>
        .card {
            border: none;
            border-radius: 12px;
        }

        .card-header {
            border-radius: 12px 12px 0 0 !important;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }

        .btn-success {
            background: linear-gradient(45deg, #198754, #20c997);
            border: none;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

            .btn-success:hover {
                background: linear-gradient(45deg, #146c43, #1aa179);
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            }

        .text-danger {
            font-size: 0.875em;
        }

        .alert-info {
            border-left: 4px solid #0dcaf0;
        }

        @@media (max-width: 768px) {
            .container-fluid {
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    </style>
}