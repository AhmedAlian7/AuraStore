                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label for="PostalCode" class="form-label">
                                    <i class="fas fa-mail-bulk me-1"></i>Postal Code <span class="text-danger">*</span>
