@model CartSummaryDto

@{
    ViewData["Title"] = "Payment Upon Receipt";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <!-- Page Header -->
            <div class="text-center mb-4">
                <h2 class="mb-2">
                    <i class="fas fa-money-bill-wave text-success me-2"></i>
                    Payment Upon Receipt
                </h2>
                <p class="text-muted">Complete your shipping information to place your order</p>
            </div>

            <!-- Order Summary Card -->
            @if (Model != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-receipt me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">
                                        <i class="fas fa-shopping-basket me-1"></i>Total Items
                                    </span>
                                    <span class="fw-bold">@(Model?.TotalItems ?? 0)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Subtotal</span>
                                    <span class="fw-bold">$@((Model?.Subtotal ?? 0).ToString("F2"))</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Tax</span>
                                    <span class="fw-bold">$@((Model?.Tax ?? 0).ToString("F2"))</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Shipping</span>
                                    <span class="fw-bold text-success">FREE</span>
                                </div>
                            </div>
                        </div>
                        <hr class="my-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Total Amount</h5>
                            <h4 class="mb-0 text-primary">$@((Model?.Total ?? 0).ToString("F2"))</h4>
                        </div>
                        <div class="mt-2">
                            <small class="text-success">
                                <i class="fas fa-truck me-1"></i>
                                You'll pay this amount when your order is delivered
                            </small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Loading cart information...
                </div>
            }

