            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-shipping-fast me-2"></i>Shipping Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Recipt" asp-controller="Checkout" method="post" id="shippingForm">
                        <!-- Hidden fields to preserve cart data -->
                        @if (Model != null)
                        {
                            <input type="hidden" asp-for="TotalItems" />
                            <input type="hidden" asp-for="Subtotal" />
                            <input type="hidden" asp-for="Tax" />
                            <input type="hidden" asp-for="Total" />
                        }

