@model E_Commerce.Business.ViewModels.Home.HomePageViewModel
@{
    ViewData["Title"] = "Premium Shopping Experience";
}

<!-- Hero Section -->
<section class="hero-banner position-relative overflow-hidden">
    <div class="hero-bg"></div>
    <div class="hero-overlay"></div>
    <div class="container position-relative">
        <div class="row align-items-center min-vh-70">
            <div class="col-lg-6">
                <h1 class="hero-title mb-4">Elevate Your Shopping Experience</h1>
                <p class="hero-subtitle mb-5">Discover premium products curated for the modern lifestyle. Quality meets innovation at Aura Store.</p>
                <div class="hero-cta d-flex gap-3 flex-wrap">
                    <a href="/Customer/Product" class="btn btn-primary-gradient">
                        Shop Now
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <a href="#trending" class="btn btn-outline-light">
                        Trending
                        <i class="fas fa-fire ms-2"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image-grid">
                    <img src="/images/laptop.jpg" alt="Featured Product" class="img-fluid rounded-4 shadow-lg">
                    <img src="/images/laptop-2.png" alt="Featured Product" class="img-fluid rounded-4 shadow-lg">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-truck-fast"></i>
                    </div>
                    <h5>Fast Delivery</h5>
                    <p>Free shipping on orders over $50</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h5>Secure Payment</h5>
                    <p>100% secure payment</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h5>24/7 Support</h5>
                    <p>Dedicated support team</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-undo"></i>
                    </div>
                    <h5>Easy Returns</h5>
                    <p>30-day return policy</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trending Categories -->
<section id="trending" class="categories-section py-6">
    <div class="container">
        <div class="section-header text-center mb-5">
            <div class="section-badge mb-3">Popular Categories</div>
            <h2 class="section-title">Shop by Category</h2>
            <p class="section-subtitle">Explore our curated collection of premium products</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <a href="/Customer/Product?category=6" class="category-card electronics">
                    <img src="/images/electronics-category.jpg" alt="Electronics" class="category-img">
                    <div class="category-overlay"></div>
                    <div class="category-content">
                        <h3>Electronics</h3>
                        <p>Latest gadgets and tech</p>
                        <span class="category-cta">
                            Shop Now <i class="fas fa-arrow-right ms-2"></i>
                        </span>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <a href="/Customer/Product?category=17" class="category-card fashion">
                    <img src="/images/fasion-catergory.jpg" alt="Fashion" class="category-img">
                    <div class="category-overlay"></div>
                    <div class="category-content">
                        <h3>Fashion</h3>
                        <p>Trendy apparel and accessories</p>
                        <span class="category-cta">
                            Shop Now <i class="fas fa-arrow-right ms-2"></i>
                        </span>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-6">
                <a href="/Customer/Product?category=7" class="category-card home">
                    <img src="/images/home&living-category.jpg" alt="Home & Living" class="category-img">
                    <div class="category-overlay"></div>
                    <div class="category-content">
                        <h3>Home & Living</h3>
                        <p>Modern home essentials</p>
                        <span class="category-cta">
                            Shop Now <i class="fas fa-arrow-right ms-2"></i>
                        </span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="featured-section py-6 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <div class="section-badge mb-3">Featured Products</div>
            <h2 class="section-title">Trending Now</h2>
            <p class="section-subtitle">Discover our most popular items</p>
        </div>
        <div class="featured-slider">
            <div class="row g-4">
                @foreach (var product in Model.TrendingProducts)
                {
                    <div class="col-lg-3 col-md-6">
                        @await Html.PartialAsync("_ProductCard", product)
                    </div>
                }

            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="testimonials-section py-6 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <div class="section-badge mb-3">Testimonials</div>
            <h2 class="section-title">What Our Customers Say</h2>
            <p class="section-subtitle">Join thousands of satisfied customers</p>
        </div>
        <div class="row g-4">
            @foreach (var review in Model.HomeReviews)
            {
                <div class="col-lg-4">
                    <div class="testimonial-card">
                        <div class="testimonial-content">
                            <p>"@review.Comment"</p>
                        </div>
                        <div class="testimonial-author">
                            <div class="author-info">
                                <h5>@review.UserName</h5>
                                <p>@review.FormattedDate</p>
                                <div class="testimonial-rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fas @(i <= review.Rating ? "fa-star text-warning" : "fa-star text-muted")"></i>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
	<link href="~/css/home.css" rel="stylesheet" />
	<link href="~/css/product-card.css" rel="stylesheet" />
}