@{
    ViewData["Title"] = "About Aura Store";
}

<!-- Hero Banner -->
<section class="about-hero d-flex align-items-center justify-content-center text-center mb-5"
         style="background: linear-gradient(135deg, var(--accent-color), var(--accent-hover)), url('../../../../wwwroot/images/about-background.jpg') center/cover no-repeat; min-height: 45vh; position: relative; color: #fff;">

    <!-- Overlay (comes first, sits under content) -->
    <div style="position:absolute; inset:0; background:rgba(37,99,235,0.45); z-index:1;"></div>

    <!-- Content -->
    <div class="container position-relative" style="z-index:2;">
        <h1 class="display-3 fw-bold mb-3">About Aura Store</h1>
        <p class="lead mb-0">Modern e-commerce for a premium, secure, and global shopping experience.</p>
    </div>
</section>


<!-- Our Story Section -->
<section class="container mb-5">
    <div class="row align-items-center g-5 flex-md-row flex-column-reverse">
        <div class="col-md-6">
            <h2 class="fw-bold mb-3">Our Story</h2>
            <p class="fs-5 text-secondary">Aura Store was founded to redefine online shopping. As a modern e-commerce platform, we blend technology, trust, and style to deliver a seamless, secure, and delightful experience for customers worldwide. Our curated collections, innovative features, and customer-first approach set us apart in the digital marketplace.</p>
        </div>
        <div class="col-md-6 text-center">
            <img src="/images/about-background.jpg" alt="Online Shopping" class="img-fluid rounded-4 shadow-lg" style="max-width: 400px;">
        </div>
    </div>
</section>

<!-- Meet the Developers Section -->
<section class="container mb-5">
    <h2 class="fw-bold text-center mb-4">Meet the Developers</h2>
    <div class="row justify-content-center g-4">
        <div class="col-md-5 col-12">
            <div class="dev-card p-4 bg-white rounded-4 shadow-lg h-100 text-center position-relative transition-hover">
                <img src="/images/A_logo.png" alt="Ahmed Alian" class="rounded-circle mb-3 shadow" style="width: 100px; height: 100px; object-fit: cover; border: 4px solid var(--accent-color);">
                <h5 class="fw-bold mb-1">Ahmed Alian</h5>
                <p class="text-secondary mb-2">Back-End Developer</p>
                <div>
                    <a href="https://www.linkedin.com/in/ahmedalian7" target="_blank" class="me-3 text-decoration-none text-primary fs-4"><i class="fab fa-linkedin"></i></a>
                    <a href="https://github.com/ahmedalian7" target="_blank" class="text-decoration-none text-dark fs-4"><i class="fab fa-github"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-12">
            <div class="dev-card p-4 bg-white rounded-4 shadow-lg h-100 text-center position-relative transition-hover">
                <img src="/images/omar.jpeg" alt="Ahmed Alian" class="rounded-circle mb-3 shadow" style="width: 100px; height: 100px; object-fit: cover; border: 4px solid var(--accent-color);">

                <h5 class="fw-bold mb-1">Omar Elsheikh</h5>
                <p class="text-secondary mb-2">Back-End Developer</p>
                <div>
                    <a href="https://www.linkedin.com/in/OmarElsheikh22" target="_blank" class="me-3 text-decoration-none text-primary fs-4"><i class="fab fa-linkedin"></i></a>
                    <a href="https://github.com/OmarElsheikh20" target="_blank" class="text-decoration-none text-dark fs-4"><i class="fab fa-github"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mission & Vision Section -->
<section class="container mb-5">
    <div class="row justify-content-center g-4">
        <div class="col-md-4 col-12">
            <div class="p-4 bg-light rounded-4 shadow-sm text-center h-100">
                <div class="mb-3 fs-1 text-primary"><i class="fas fa-bullseye"></i></div>
                <h6 class="fw-bold mb-2">Our Mission</h6>
                <p class="text-secondary mb-0">To empower customers with a secure, enjoyable, and customer-focused online shopping journey.</p>
            </div>
        </div>
        <div class="col-md-4 col-12">
            <div class="p-4 bg-light rounded-4 shadow-sm text-center h-100">
                <div class="mb-3 fs-1 text-primary"><i class="fas fa-globe"></i></div>
                <h6 class="fw-bold mb-2">Our Vision</h6>
                <p class="text-secondary mb-0">To expand globally and lead innovation in the e-commerce industry.</p>
            </div>
        </div>
    </div>
</section>

<!-- Core Values Section -->
<section class="container mb-5">
    <h2 class="fw-bold text-center mb-4">Our Core Values</h2>
    <div class="row g-4 justify-content-center">
        <div class="col-md-3 col-6">
            <div class="p-4 bg-white rounded-4 shadow-sm text-center h-100">
                <div class="mb-2 fs-2 text-primary"><i class="fas fa-handshake"></i></div>
                <h6 class="fw-semibold mb-1">Trust</h6>
                <p class="text-secondary small mb-0">We build lasting relationships through honesty and reliability.</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="p-4 bg-white rounded-4 shadow-sm text-center h-100">
                <div class="mb-2 fs-2 text-primary"><i class="fas fa-lightbulb"></i></div>
                <h6 class="fw-semibold mb-1">Innovation</h6>
                <p class="text-secondary small mb-0">We embrace creativity and technology to enhance shopping.</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="p-4 bg-white rounded-4 shadow-sm text-center h-100">
                <div class="mb-2 fs-2 text-primary"><i class="fas fa-users"></i></div>
                <h6 class="fw-semibold mb-1">Customer Care</h6>
                <p class="text-secondary small mb-0">Our customers are at the heart of everything we do.</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="p-4 bg-white rounded-4 shadow-sm text-center h-100">
                <div class="mb-2 fs-2 text-primary"><i class="fas fa-gem"></i></div>
                <h6 class="fw-semibold mb-1">Quality</h6>
                <p class="text-secondary small mb-0">We deliver only the best products and services.</p>
            </div>
        </div>
    </div>
</section>

<!-- Call-to-Action Section -->
<section class="container-fluid py-5" style="background: linear-gradient(90deg, var(--accent-color), var(--accent-hover));">
    <div class="container text-center">
        <h2 class="fw-bold text-white mb-3">Join the Aura Store Community</h2>
        <a href="/Customer/Product" class="btn btn-lg btn-light rounded-pill px-5 fw-semibold shadow-sm">Start Shopping</a>
    </div>
</section>

@section Styles {
    <style>
        .about-hero { position: relative; min-height: 45vh; }
        .about-hero .container { position: relative; z-index: 2; }
        .dev-card { transition: transform 0.2s, box-shadow 0.2s; }
        .dev-card:hover { transform: translateY(-8px) scale(1.03); box-shadow: 0 8px 32px rgba(37,99,235,0.12); }
        .rounded-4 { border-radius: 2rem !important; }
        .transition-hover { transition: all 0.2s; }
        @@media (max-width: 767.98px) {
            .about-hero { min-height: 30vh; }
            .rounded-4 { border-radius: 1.2rem !important; }
        }
    </style>
}
