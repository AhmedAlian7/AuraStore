@model E_Commerce.Business.ViewModels.Wishlist.WishlistViewModel
@{
    ViewData["Title"] = "My Wishlist";
    Layout = "_MyLayout";
}

<style>

</style>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-heart text-danger me-2"></i>My Wishlist
                </h1>
                <span class="badge bg-primary fs-6">@Model.TotalCount items</span>
            </div>
        </div>
    </div>

    @if (Model.IsEmpty)
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="empty-wishlist">
                        <i class="fas fa-heart-broken fa-4x text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">Your wishlist is empty</h3>
                        <p class="text-muted mb-4">Start adding products to your wishlist to save them for later!</p>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-primary">
                            <i class="fas fa-shopping-bag me-2"></i>Browse Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model.WishlistItems)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="wishlist-item-card h-100">
                        <div class="card h-100 shadow-sm">
                            <div class=" position-relative">
                                <img src="@item.MainImageUrl" class="card-img-top" alt="@item.ProductName" style="object-fit: contain;">
                                <div class="position-absolute top-0 end-0 p-2">
                                    <button class="btn btn-sm btn-outline-danger remove-wishlist-btn" 
                                            data-product-id="@item.ProductId" 
                                            title="Remove from wishlist">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                                @if (!item.InStock)
                                {
                                    <div class="position-absolute top-0 start-0 p-2">
                                        <span class="badge bg-warning text-dark">Out of Stock</span>
                                    </div>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@item.ProductName</h5>
                                <p class="card-text text-muted small">@item.CategoryName</p>
                                
                                <div class="mb-2">
                                    @if (item.DiscountPrice.HasValue)
                                    {
                                        <span class="text-decoration-line-through text-muted">$@item.Price.ToString("F2")</span>
                                        <span class="text-danger fw-bold ms-2">$@item.EffectivePrice.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">$@item.EffectivePrice.ToString("F2")</span>
                                    }
                                </div>

                                <div class="mb-3">
                                    <div class="stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fa@(i <= item.AverageRating ? "s" : "r") fa-star text-warning"></i>
                                        }
                                    </div>
                                    <small class="text-muted">(@item.ReviewCount reviews)</small>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        @if (item.InStock)
                                        {
                                            <button class="btn btn-primary move-to-cart-btn" 
                                                    data-product-id="@item.ProductId">
                                                <i class="fas fa-shopping-cart me-2"></i>Move to Cart
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary" disabled>
                                                <i class="fas fa-times me-2"></i>Out of Stock
                                            </button>
                                        }
                                        <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" 
                                           class="btn btn-outline-secondary">
                                            <i class="fas fa-eye me-2"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-muted small">
                                <i class="fas fa-clock me-1"></i>Added @item.AddedAt.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <nav aria-label="Wishlist pagination">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/js/wishlist.js"></script>
}
