<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuraStore</title>

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

	<link href="~/css/customer-layout.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    


</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top shadow-sm">
        <div class="container">
         
            <a class="navbar-brand d-flex align-items-center" asp-action="Index" asp-controller="Home">
                <div class="logo-container">
                    <img src="~/images/aura.svg" alt="AuraStore Logo" width="32" height="32" class="logo-img" />
                    <span class="brand-text">AuraStore</span>
                </div>
            </a>

            <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>

            <!-- Navigation -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Home" class="nav-link modern-nav-link">
                            <i class="fas fa-home nav-icon"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Index" asp-controller="Product" asp-area="Customer" class="nav-link modern-nav-link">
                            <i class="fas fa-store nav-icon"></i>
                            <span>Products</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link modern-nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-th-large nav-icon"></i>
                            <span>Categories</span>
                        </a>
                        <ul class="dropdown-menu modern-dropdown" aria-labelledby="categoriesDropdown">
                            <li><a class="dropdown-item" href="/Customer/Product/Index?category=electronics">Electronics</a></li>
                            <li><a class="dropdown-item" href="/Customer/Product/Index?category=fasion">Fashion</a></li>
                            <li><a class="dropdown-item" href="/Customer/Product/Index?category=home">Home & Garden</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Customer/Product/Index">View All Categories</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a asp-action="About" asp-controller="Home" asp-area="Customer" class="nav-link modern-nav-link">
                            <i class="fas fa-info-circle nav-icon"></i>
                            <span>About</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Contact" asp-controller="Home" asp-area="Customer" class="nav-link modern-nav-link">
                            <i class="fas fa-envelope nav-icon"></i>
                            <span>Contact</span>
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center auth-section">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <!-- Search Bar -->
                        <div class="search-container me-3 d-none d-lg-block">
                            <form class="search-form" asp-action="Search" asp-controller="Product">
                                <input type="text" class="search-input" placeholder="Search products..." name="query" />
                                <button type="submit" class="search-btn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>

                        <!-- User Action Icons -->
                        <div class="user-actions d-flex align-items-center">
                            <!-- Cart with modern badge -->
                            <div class="action-item">
                                <button class="modern-icon-btn" onclick="location.href='@Url.Action("Index", "Cart")'" title="Shopping Cart">
                                    <i class="fas fa-shopping-bag"></i>
                                    @if (ViewBag.CartCount > 0)
                                    {
                                        <span class="modern-badge">@ViewBag.CartCount</span>
                                    }
                                </button>
                            </div>

                            <!-- Wishlist -->
                            <div class="action-item">
                                <button class="modern-icon-btn" title="Wishlist">
                                    <i class="fas fa-heart"></i>
                                    @if (ViewBag.WishlistCount > 0)
                                    {
                                        <span class="modern-badge">@ViewBag.WishlistCount</span>
                                    }
                                </button>
                            </div>

                            <!-- Notifications -->
                            <div class="action-item">
                                <button class="modern-icon-btn" title="Notifications">
                                    <i class="fas fa-bell"></i>
                                    <span class="modern-badge pulse">3</span>
                                </button>
                            </div>

                            <!-- User Profile Dropdown -->
                            <div class="dropdown user-dropdown">
                                <button class="user-profile-btn dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="user-info d-none d-lg-block">
                                        <span class="user-greeting">Hello,</span>
                                        <span class="user-name">@(User.Identity.Name ?? "User")</span>
                                    </div>
                                    <i class="fas fa-chevron-down dropdown-arrow"></i>
                                </button>

                                <ul class="dropdown-menu user-dropdown-menu" aria-labelledby="userDropdown">
                                    <li class="dropdown-header">
                                        <div class="user-details">
                                            <strong>@(User.Identity.Name ?? "User")</strong>
                                            <small class="text-muted">@(User.Identity.Name ?? "user@example.com")</small>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Profile" asp-area="Customer">
                                            <i class="fas fa-user-circle me-2"></i>My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Index" asp-controller="Orders" asp-area="Customer">
                                            <i class="fas fa-box me-2"></i>My Orders
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-heart me-2"></i>Wishlist
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-cog me-2"></i>Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Logout" asp-controller="Account" asp-area="Authentication">
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Not Logged In - Modern Auth Buttons -->
                        <div class="guest-actions">
                            <a class="modern-auth-btn outline" asp-action="Login" asp-controller="Account" asp-area="Authentication">
                                <i class="fas fa-sign-in-alt"></i>
                                <span>Login</span>
                            </a>
                            <a class="modern-auth-btn filled" asp-action="Register" asp-controller="Account" asp-area="Authentication">
                                <i class="fas fa-user-plus"></i>
                                <span>Register</span>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Mobile Search Bar (visible on small screens) -->
    <div class="mobile-search d-lg-none">
        <div class="container">
            <form class="search-form" asp-action="Search" asp-controller="Product">
                <input type="text" class="search-input" placeholder="Search products..." name="query" />
                <button type="submit" class="search-btn">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>




    <!-- Main Content -->
    <main class="fade-in" style="margin: 0 auto; padding: 20px;">
        <div class="container loading" data-aos="fade-up" data-aos-delay="100">
            <!-- Breadcrumb Navigation -->
            @if (ViewContext.RouteData.Values["controller"].ToString() != "Home" || ViewContext.RouteData.Values["action"].ToString() != "Index")
            {
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
                        {
                            <li class="breadcrumb-item">
                                <a asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index">
                                    @ViewContext.RouteData.Values["controller"]
                                </a>
                            </li>
                        }
                        @if (ViewContext.RouteData.Values["action"].ToString() != "Index")
                        {
                            <li class="breadcrumb-item active" aria-current="page">
                                @ViewContext.RouteData.Values["action"]
                            </li>
                        }
                    </ol>
                </nav>
            }

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bi bi-info-circle"></i> @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <main class="content">
				@RenderSection("Content", required: false)
			</main>
        </div>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <!-- Brand Info -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5><i class="fas fa-gem me-2" style="color: var(--accent-color);"></i>AuraStore</h5>
                        <p class="mb-4">Experience premium quality and exceptional style. Your trusted destination for luxury products that define elegance and sophistication.</p>

                        <!-- Newsletter Signup -->
                        <div class="newsletter-section mb-4">
                            <h6 class="mb-3">Get 10% Off Your First Order</h6>
                            <div class="input-group">
                                <input type="email" class="form-control newsletter-input" placeholder="Enter your email" aria-label="Email">
                                <button class="btn newsletter-btn" type="button">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Social Media -->
                        <div class="social-links">
                            <h6 class="mb-3">Follow Us</h6>
                            <a href="#" class="social-icon" target="_blank" rel="noopener"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="social-icon" target="_blank" rel="noopener"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="social-icon" target="_blank" rel="noopener"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="social-icon" target="_blank" rel="noopener"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Shop</h5>
                        <a href="@Url.Action("Index", "Home", new {area = "Customer"})" class="footer-link">Home</a>
                        <a href="@Url.Action("Index", "Product", new { area = "Customer" })" class="footer-link">Shop</a>
                        <a href="@Url.Action("Index", "Category", new { area = "Customer" })" class="footer-link">Categories</a>
                        <a href="@Url.Action("About", "Home", new { area = "Customer" })" class="footer-link">About Us</a>
                        <a href="@Url.Action("Contact", "Home", new { area = "Customer" })" class="footer-link">Contact</a>
                    </div>
                </div>

                <!-- Customer Service -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Customer Service</h5>
                        <a href="#" class="footer-link">FAQ</a>
                        <a href="#" class="footer-link">Shipping & Returns</a>
                        <a href="#" class="footer-link">Size Guide</a>
                        <a href="#" class="footer-link">Track Your Order</a>
                        <a href="#" class="footer-link">Terms & Conditions</a>
                        <a href="#" class="footer-link">Privacy Policy</a>
                    </div>
                </div>

                <!-- Company Info -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="footer-section">
                        <h5>Get In Touch</h5>
                        <div class="contact-info">
                            <p><i class="fas fa-map-marker-alt me-2" style="color: var(--accent-color);"></i>123 Fashion Avenue<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Style District, NY 10001</p>
                            <p><i class="fas fa-phone me-2" style="color: var(--accent-color);"></i>+1 (555) 123-AURA</p>
                            <p><i class="fas fa-envelope me-2" style="color: var(--accent-color);"></i>hello@aurastore.com</p>
                            <p><i class="fas fa-clock me-2" style="color: var(--accent-color);"></i>24/7 Customer Support</p>
                        </div>

                        <!-- Payment Methods -->
                        <div class="payment-methods mt-4">
                            <h6 class="mb-3">We Accept</h6>
                            <div class="payment-icons">
                                <img src="data:image/svg+xml;base64," alt="Visa" class="payment-icon">
                                <img src="data:image/svg+xml;base64," alt="Mastercard" class="payment-icon">
                                <img src="data:image/svg+xml;base64," alt="PayPal" class="payment-icon">
                                <img src="data:image/svg+xml;base64," alt="American Express" class="payment-icon">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <p>&copy; @DateTime.Now.Year AuraStore. All rights reserved. | Crafted with excellence for luxury shopping.</p>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex justify-content-md-end justify-content-center">
                            <span class="secure-badge">
                                <i class="fas fa-shield-alt me-1" style="color: var(--accent-color);"></i>
                                <small>Secure Shopping</small>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>