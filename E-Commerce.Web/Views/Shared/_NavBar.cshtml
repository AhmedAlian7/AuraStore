<!-- Header -->
<nav class="navbar navbar-expand-lg navbar-custom sticky-top shadow-sm">
    <div class="container">
     
        <a class="navbar-brand d-flex align-items-center" asp-action="Index" asp-controller="Home">
            <div class="logo-container">
                <img src="~/images/aura.svg" alt="AuraStore Logo" width="32" height="32" class="logo-img" />
                <span class="brand-text">AuraStore</span>
            </div>
        </a>

        <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>

        <!-- Navigation -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Home" class="nav-link modern-nav-link">
                        <i class="fas fa-home nav-icon"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Product" asp-area="Customer" class="nav-link modern-nav-link">
                        <i class="fas fa-store nav-icon"></i>
                        <span>Products</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link modern-nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-th-large nav-icon"></i>
                        <span>Categories</span>
                    </a>
                    <ul class="dropdown-menu modern-dropdown" aria-labelledby="categoriesDropdown">
                        <li><a class="dropdown-item" href="/Customer/Product/Index?category=electronics">Electronics</a></li>
                        <li><a class="dropdown-item" href="/Customer/Product/Index?category=fasion">Fashion</a></li>
                        <li><a class="dropdown-item" href="/Customer/Product/Index?category=home">Home & Garden</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-area="Customer" asp-controller="Categories" asp-action="Index">
                            <i class="fas fa-th-large me-2"></i>Browse All Categories
                        </a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-action="About" asp-controller="Home" asp-area="Customer" class="nav-link modern-nav-link">
                        <i class="fas fa-info-circle nav-icon"></i>
                        <span>About</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Contact" asp-controller="Home" asp-area="Customer" class="nav-link modern-nav-link">
                        <i class="fas fa-envelope nav-icon"></i>
                        <span>Contact</span>
                    </a>
                </li>
            </ul>

            <div class="d-flex align-items-center auth-section">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <!-- Search Bar -->
                    <div class="search-container me-3 d-none d-lg-block">
                        <form class="search-form" asp-action="Search" asp-controller="Product">
                            <input type="text" class="search-input" placeholder="Search products..." name="query" />
                            <button type="submit" class="search-btn">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>

                    <!-- User Action Icons -->
                    <div class="user-actions d-flex align-items-center">
                        <!-- Cart with modern badge -->
                        <div class="action-item">
                            <button class="modern-icon-btn" onclick="location.href='@Url.Action("Index", "Cart")'" title="Shopping Cart">
                                <i class="fas fa-shopping-bag"></i>
                                <span class="modern-badge cart-badge" 
                                      id="cart-badge"
                                      role="status" 
                                      aria-atomic="true"
                                      title="Items in cart: 0"
                                      style="display: none;">
                                    0
                                </span>
                            </button>
                        </div>

                        <!-- Wishlist -->
                        <div class="action-item">
                            <a class="modern-icon-btn" href="@Url.Action("Index", "Wishlist", new { area = "Customer" })" title="Wishlist">
                                <i class="fas fa-heart"></i>
                                <span class="modern-badge wishlist-badge" 
                                      id="wishlist-badge"
                                      role="status" 
                                      aria-atomic="true"
                                      title="Items in wishlist: 0"
                                      style="display: none;">
                                    0
                                </span>
                            </a>
                        </div>

                        <!-- Notifications -->
                        <div class="action-item">
                            <button class="modern-icon-btn" title="Notifications">
                                <i class="fas fa-bell"></i>
                                <span class="modern-badge pulse">3</span>
                            </button>
                        </div>

                        <!-- User Profile Dropdown -->
                        <div class="dropdown user-dropdown">
                            <button class="user-profile-btn dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="user-info d-none d-lg-block">
                                    <span class="user-greeting">Hello,</span>
                                    <span class="user-name">@(User.Identity.Name ?? "User")</span>
                                </div>
                                <i class="fas fa-chevron-down dropdown-arrow"></i>
                            </button>

                            <ul class="dropdown-menu user-dropdown-menu" aria-labelledby="userDropdown">
                                <li class="dropdown-header">
                                    <div class="user-details">
                                        <strong>@(User.Identity.Name ?? "User")</strong>
                                        <small class="text-muted">@(User.FindFirst(ClaimTypes.Email)?.Value ?? "user@example.com")</small>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Profile" asp-area="Customer">
                                        <i class="fas fa-user-circle me-2"></i>My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Orders" asp-area="Customer">
                                        <i class="fas fa-box me-2"></i>My Orders
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="Index" asp-controller="Wishlist" asp-area="Customer">
                                        <i class="fas fa-heart me-2"></i>Wishlist
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="fas fa-cog me-2"></i>Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-action="Logout" asp-controller="Account" asp-area="Authentication">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Not Logged In - Modern Auth Buttons -->
                    <div class="guest-actions">
                        <a class="modern-auth-btn outline" asp-action="Login" asp-controller="Account" asp-area="Authentication">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Login</span>
                        </a>
                        <a class="modern-auth-btn filled" asp-action="Register" asp-controller="Account" asp-area="Authentication">
                            <i class="fas fa-user-plus"></i>
                            <span>Register</span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</nav>

<!-- Mobile Search Bar (visible on small screens) -->
<div class="mobile-search d-lg-none">
    <div class="container">
        <form class="search-form" asp-action="Search" asp-controller="Product">
            <input type="text" class="search-input" placeholder="Search products..." name="query" />
            <button type="submit" class="search-btn">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
</div>
